{{#if addNewUser}}
<form>
  <div class="form-group">
    <label for="formGroupExampleInput">National ID</label>
    {{input type="number" class="form-control" id="id" value=id placeholder="Enter your ID NO"}}
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput">Full Names</label>
    {{input type="text" class="form-control" id="name" value=name placeholder="Enter your full names"}}
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput">Valid Phone Number</label>
    {{input type="number" class="form-control" id="number" value=number placeholder="Enter Your Phone Number"}}
  </div>  
  <fieldset disabled>
    <div class="form-group">
    <label for="formGroupExampleInput">Email address</label>
    {{input type="email" class="form-control" id="email" value=session.data.authenticated.profile.email }}
  </div>
  </fieldset>
  <button class="btn btn-submit" {{action 'newUser'}}>Register</button>
  <button class="btn btn-submit" {{action 'resetForm'}}>Reset form</button>
  <button class="btn btn-submit" {{action 'cancelForm'}}>Cancel</button>
</form>
{{else}}
<button class="btn btn-submit" {{action 'addNewUser'}}>Add a new user</button>
{{/if}}
{{yield}}
