<div class="container-fluid navbar" style="margin: 0">
  <nav>
    <ul>
      <li>
        <a href="/">
          <img src="img/Logo2.png">
        </a>
        {{#link-to 'index'}}<img class="text-center" src="img/Logo2.png">{{/link-to}}
      </li>
      <li>
        {{#if session.isAuthenticated}}
          <h3>You are currently logged as: {{session.data.authenticated.profile.email}}</h3>
          <a href="#" {{action 'logout'}}>Logout</a>
        {{else}}
          <a class="link" href="#" {{action 'login'}}>Login</a>
        {{/if}}
      </li>
    </ul>
  </nav>
</div>
{{outlet}}

<!--Welcome-txt-->
<div class="welcome-txt">
  <h1> WELCOME TO NDUTHIS </h1>
  <h2> Your RIDE is one click away</h2>
  <div class="form-actions">
    <button class="btn btn-primary" type="submit">Let's Nduthis</button>
  </div>
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">

    <div class="item active">
      <img class="img-responsive" src="http://www.bidii-ngo.org/images/homepage/nduthi.jpg" alt="Los Angeles" style="width:100%;">
    </div>

    <div class="item">
      <img class="img-responsive" src="https://i.ytimg.com/vi/WwYnf5OsZ1U/maxresdefault.jpg" alt="Chicago" style="width:100%;">
    </div <h2> Your adventure is one click away. Let's Nduthis!!!</h2> {{outlet}}
    <div class="item">
      <img class="img-responsive" src="http://nairobiwire.com/wp-content/uploads/2015/11/corazon.png" alt="New York" style="width:100%;">
    </div>

  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev" style="z-index:3;">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next" style="z-index:3;">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<!--Register Section-->
<div class="register">
  <div class="reg-head">
    <h1>Are you REGISTERED?</h1>
  </div>
  <div class="row" style="margin-left:0px;margin-right:0px">
    <div class="col-md-6 reg-rider">
      <h3>Register as</h3>
      <hr>
      <button class="btn btn-success reg-button">RIDER</button>
    </div>
    <div class="col-md-6 reg-user">
      <h3>Register as</h3>
      <hr>
      <button class="btn btn-success reg-button">USER</button>
    </div>
  </div>
</div>
{{outlet}}

