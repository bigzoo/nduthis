<div class="container-fluid navbar" style="margin: 0">
  <nav>
    <ul>
      <li>
        {{#link-to 'index'}}<img class="text-center" src="img/Logo2.png">{{/link-to}}
      </li>
      <li>
        {{#if session.isAuthenticated}}
          <h3>You are currently logged as: {{session.data.authenticated.profile.email}}</h3>
